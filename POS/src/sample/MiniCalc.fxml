<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>


<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<GridPane fx:controller="sample.MiniCalcController"
          xmlns:fx="http://javafx.com/fxml"
          hgap="10" vgap="10" prefHeight="400" minHeight="400" maxHeight="400" prefWidth="280" minWidth="280" maxWidth="280" styleClass="main_container">

    <padding>
        <Insets top="20" left="10" right="10"/>
    </padding>

<GridPane hgap="10" vgap="10">
    <rowConstraints>
        <RowConstraints percentHeight="15"/>
        <RowConstraints percentHeight="90"/>
    </rowConstraints>

    <columnConstraints>
        <ColumnConstraints  percentWidth="100"/>
    </columnConstraints>

    <GridPane hgap="10" vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="0">

        <columnConstraints>
            <ColumnConstraints  percentWidth="80"/>
            <ColumnConstraints  percentWidth="20"/>
        </columnConstraints>

            <TextField styleClass="output" fx:id="outputPad" prefHeight="1000" GridPane.halignment="RIGHT" GridPane.rowIndex="0" GridPane.columnIndex="0"  promptText="0"  alignment="CENTER_RIGHT">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </TextField>

        <Button styleClass="calc_btns" text="DEL" fx:id="delete" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="120" prefHeight="60">
            <font>
                <Font size="8" name="Rouge"/>
            </font>
        </Button>
    </GridPane>

    <GridPane fx:id="keyPad" styleClass="keyPad" hgap="10" vgap="10"  GridPane.columnIndex="0" GridPane.rowIndex="1" prefHeight="1000" GridPane.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="25"/>
            </columnConstraints>


        <padding>
            <Insets top="20" bottom="10"/>
        </padding>

        <Button styleClass="calc_btns" text="7" GridPane.rowIndex="0" GridPane.columnIndex="0"  prefWidth="120" prefHeight="60">
            <font>
                <Font size="26" name="Rouge"/>
            </font>
        </Button>

            <Button styleClass="calc_btns" text="8" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>

            <Button styleClass="calc_btns" text="9" GridPane.rowIndex="0" GridPane.columnIndex="2" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>

            <Button styleClass="calc_btns" text="/"  accessibleText="functional"  GridPane.rowIndex="0" GridPane.columnIndex="3"  prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>



            <Button styleClass="calc_btns" text="4" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>

            <Button styleClass="calc_btns" text="5" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>

            <Button styleClass="calc_btns" text="6" GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>
            <Button styleClass="calc_btns" text="-"  accessibleText="functional"  GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>

            <Button styleClass="calc_btns" text="1" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>

            <Button styleClass="calc_btns" text="2" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>


            <Button styleClass="calc_btns" text="3" GridPane.rowIndex="2" GridPane.columnIndex="2" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>

            <Button styleClass="calc_btns" text="+"  accessibleText="functional" GridPane.rowIndex="2" GridPane.columnIndex="3" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>

            <Button styleClass="calc_btns" text="." GridPane.rowIndex="3" GridPane.columnIndex="0" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>

            <Button styleClass="calc_btns" text="0" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>

            <Button styleClass="calc_btns"  accessibleText="functional"  text="x" GridPane.rowIndex="3" GridPane.columnIndex="2" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>

            <Button styleClass="calc_btns" accessibleText="functional" text="=" GridPane.rowIndex="3" GridPane.columnIndex="3" prefWidth="120" prefHeight="60">
                <font>
                    <Font size="26" name="Rouge"/>
                </font>
            </Button>

    </GridPane>
</GridPane>
</GridPane>